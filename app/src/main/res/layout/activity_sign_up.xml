<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/signup_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Account.SignUpActivity">

    <ImageView
        android:id="@+id/account_oval"
        android:layout_width="600dp"
        android:layout_height="600dp"
        android:layout_marginLeft="-200dp"
        android:layout_marginTop="-350dp"
        android:src="@drawable/login_back" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="80dp"
        android:text="@string/signup"
        android:textColor="@color/white"
        android:textSize="45sp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/account_oval"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="20dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="30dp"
                android:paddingVertical="20dp">

                <EditText
                    android:id="@+id/sign_et_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input"
                    android:hint="@string/name"
                    android:inputType="textPersonName"
                    android:paddingVertical="7dp"
                    android:paddingLeft="5dp"
                    android:textColorHint="@color/dark_gray"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/sign_et_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/input"
                    android:hint="ID"
                    android:inputType="textPersonName"
                    android:paddingVertical="7dp"
                    android:paddingLeft="5dp"
                    android:textColorHint="@color/dark_gray"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/sign_tv_err"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="-25dp"
                    android:text="다른 아이디를 입력하세요."
                    android:textColor="#ff0000"
                    android:textSize="16sp"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/sign_et_pw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/input"
                    android:hint="비밀번호"
                    android:inputType="textPassword"
                    android:paddingVertical="7dp"
                    android:paddingLeft="5dp"
                    android:textColorHint="@color/dark_gray"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/sign_et_pw_check"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/input"
                    android:hint="비밀번호 확인"
                    android:inputType="textPassword"
                    android:paddingVertical="7dp"
                    android:paddingLeft="5dp"
                    android:textColorHint="@color/dark_gray"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/sign_tv_pw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="-25dp"
                    android:text="비밀번호가 일치하지 않습니다."
                    android:textColor="#ff0000"
                    android:textSize="16sp"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/sign_et_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/input"
                    android:hint="전화번호"
                    android:inputType="phone"
                    android:paddingVertical="7dp"
                    android:paddingLeft="5dp"
                    android:textColorHint="@color/dark_gray"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/sign_tv_addr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/input"
                    android:paddingVertical="7dp"
                    android:paddingLeft="5dp"
                    android:text="주소"
                    android:textColor="@color/dark_gray"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/sign_btn_confirm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/primary_btn"
                        android:text="확인"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>


        </ScrollView>
    </androidx.cardview.widget.CardView>

</RelativeLayout>